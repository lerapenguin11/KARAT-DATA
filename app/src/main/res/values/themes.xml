<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KARATDATA" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/c_toolbar</item>
        <item name="colorPrimaryVariant">@color/c_background_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:colorBackgroundCacheHint">@color/c_input_text</item>
        <item name="android:textColorHint">@color/c_label</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.KARATDATA.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.KARATDATA.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.KARATDATA.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="CheckboxStyle" parent="Theme.KARATDATA">
        <item name="colorControlActivated">@color/с_turquoise</item>
        <item name="colorControlNormal">@color/c_turquoise_light</item>
    </style>
    <style name="RadioButton" parent="Theme.KARATDATA">
        <item name="colorControlActivated">@color/с_turquoise</item>
        <item name="colorControlNormal">@color/c_label</item>
        <item name="android:textColor">@color/c_text_light</item>
    </style>
</resources>